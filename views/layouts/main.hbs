<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/todo.css">
    <title>To DO List</title>
</head>
<body>
<h1>CRUD application</h1>
<h2>To DO List</h2>

<form action="/todo" method="post">

    <label for="nazwa">Nazwa zadania:</label>
    <input type="text"
           name="nazwa"
           placeholder="tytul"
           required><br>

    <label for="tresc">Treść zadania:</label>
    <textarea
            name="tresc"
            placeholder="tresc"
            required></textarea><br>
    <button type="submit">Dodaj</button>
</form><br>

    {{#each tasks}}
<ul>
                  <li>Zadanie: {{this.nazwa}}<br>
                   Treść: {{this.tresc}}</li>

               <form action="/todo/delete/{{this.id}}" method="post">
                   <button class="todo" type="submit">Usuń</button>
               </form>
</ul>
    {{/each}}


    <form action="/auth" method="get">
        <input
                class="btn"
                type="submit"
                value="Go back!">
    </form>
    
    <form action="/logout" method="get">
        <input
            class="btnlogout"
            type="submit"
               value="Logout">
    </form>
    
</body>
</html>