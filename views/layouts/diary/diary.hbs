<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/diary.css">
    <title>Diary</title>
</head>
<body>
<h1>Diary</h1>
<h2>Information about student</h2>
<form action="/classDiary" method="post">
    <input type="text" name="firstName" placeholder="First name" required><br>
    <input type="text" name="lastName" placeholder="Last name" required><br>
    <input type="text" name="email" placeholder="Email" required><br>
    <input type="number" name="year" placeholder="Year" required min="1" max="5"><br>
    <input type="text" name="course" placeholder="Course" required><br>
    <button class="btn add" type="submit">Dodaj</button>
</form>
<br>


<table>
  <thead>
    <tr>
        <th>Lp</th>
        <th>Index No.</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Year</th>
        <th>Course</th>
        <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each students}}
    <tr>
      <td>{{inc @index}}</td>
      <td>{{nrIndexu}}</td>
      <td>{{firstName}}</td>
      <td>{{lastName}}</td>
      <td>{{email}}</td>
      <td>{{year}}</td>
      <td>{{course}}</td>
      <td>
        <form action="/classDiary/delete/{{this.nrIndexu}}" method="POST">
            <input class="btn add" type="submit" value="Delete">
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>


 <div class="button-container">
        <form action="/update-students" method="post">
            <label for="nrIndexu">Select the Student's Record Number to change</label>
            <select nrIndexu="nrIndexu" name="nrIndexu">
                {{#each students}}
                    <option value="{{this.nrIndexu}}">{{this.nrIndexu}}</option>
                {{/each}}
            </select><br>

            <input type="text" name="firstName" placeholder="First name" required><br>
            <input type="text" name="lastName" placeholder="Last name" required><br>
            <input type="text" name="email" placeholder="Email" required><br>
            <input type="number" name="year" placeholder="Year" required min="1" max="5"><br>
            <input type="text" name="course" placeholder="Course" required><br>
            <input class="btn" type="submit" value="Update students">
        </form>
    </div>

    <form action="/auth" method="get">
        <input
                class="btn"
                type="submit"
                value="Go back!">
    </form>
    
    <form action="/logout" method="get">
        <input
            class="btnlogout"
            type="submit"
               value="Logout">
    </form>


</body>
</html>
