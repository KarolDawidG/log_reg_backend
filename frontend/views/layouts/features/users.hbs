<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/usersList.css">
    <title>Users</title>
</head>
<body>
<h1>Lista użytkowników</h1>

<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Imię</th>
        <th>E-mail</th>
        <th>Rola</th>
        <th>Usun</th>
    </tr>
    </thead>
    <tbody>
    {{#each usersList}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.username}}</td>
            <td>{{this.email}}</td>
            <td>{{this.role}}</td>
            <td>
                <form action="/users/delete/{{this.id}}" method="POST">
                    <input class="btn" type="submit" value="Usuń">
                </form>

            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

    <div class="button-container">
        <form action="/update-role" method="post">
            <label for="username">Username:</label>
            <select id="username" name="username">
                {{#each usersList}}
                    <option value="{{this.username}}">{{this.username}}</option>
                {{/each}}
            </select>
            <br>
            <label for="role">New Role:</label>
            <select id="role" name="role">
                <option value="user">User</option>
                <option value="admin">Admin</option>
            </select>
            <br>
            <input class="btn" type="submit" value="Update role">
        </form>
    </div>

    <div class="container">
        <form action="/logout" method="get">
            <input
                    class="btnlogout"
                    type="submit"
                    value="Logout">
        </form>
    </div>
</body>
</html>