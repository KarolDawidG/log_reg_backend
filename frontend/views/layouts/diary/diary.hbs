<!doctype html>
<head>
    
    <link rel="stylesheet" href="/css/diary.css">
    <title>Diary</title>

</head>

<body>
    <div class="forms-container">
    <div class="forms-container__create">
          <form class="form" action="/update-grade" method="get">
            <input class="form__btn" type="submit" value="Oceny">
          </form>

          <form class="form" action="/subjects" method="get">
            <input class="form__btn" type="submit" value="Przedmioty">
          </form>
          
        <h2 class="forms-container__title">Information about student</h2>
        <form class="forms-container__form" action="/classDiary" method="post">
    
            <input class="forms-container__input" type="text" name="firstName" placeholder="First name" required>
            <br>
            <input class="forms-container__input" type="text" name="lastName" placeholder="Last name" required>
            <br>
            <input class="forms-container__input" type="text" name="email" placeholder="Email" required>
            <br>
            <input class="forms-container__input" type="number" name="year" placeholder="Year" required min="1" max="5">
            <br>

                <select class="forms-container__select" name="course" id="course" required>
                    {{#each teachers}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>  
            <br>
            <button class="forms-container__button forms-container__button--add" type="submit">Dodaj</button>
        </form>
    </div>
    
    <div class="forms-container__edit">
            <form class="form" action="/auth" method="get">
                <input class="form__btn" type="submit" value="Go back!">
            </form>

            <form class="form" action="/logout" method="get">
                <input class="form__btn" type="submit" value="Logout">
            </form>
            
        <h2 class="forms-container__title">Edit student</h2>
      <form class="forms-container__form" action="/update-students" method="post">
    <input class="forms-container__input" type="text" name="firstName" placeholder="First name" required>
    <br>
    <input class="forms-container__input" type="text" name="lastName" placeholder="Last name" required>
    <br>
    <input class="forms-container__input" type="text" name="email" placeholder="Email" required>
    <br>
    <input class="forms-container__input" type="number" name="year" placeholder="Year" required min="1" max="5">
    <br>
   <select class="forms-container__select" name="course" id="course" required>
            {{#each teachers}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
    </select> 
    <br>
    <label class="forms-container__label" for="nrIndexu">Select the Student's Record Number to change</label>
    <select class="forms-container__select" name="nrIndexu" id="nrIndexu">
        {{#each students}}
            <option value="{{this.nrIndexu}}">{{this.nrIndexu}}</option>
        {{/each}}
    </select>
    <br>
    <input class="forms-container__button" type="submit" value="Update students">
</form>
    </div>
</div>

    <div class="table-container">
    <table class="table">
        <thead class="table__head">
            <tr>
                <th class="table__heading">Lp</th>
                <th class="table__heading">Index No.</th>
                <th class="table__heading">First Name</th>
                <th class="table__heading">Last Name</th>
                <th class="table__heading">Email</th>
                <th class="table__heading">Year</th>
                <th class="table__heading">Course</th>
                <th class="table__heading">Delete</th>
            </tr>
        </thead>
        

            <tbody class="table__body">
            {{#each students}}
            <tr class="table__row"> 
                <td class="table__cell">{{inc @index}}</td>
                <td class="table__cell">{{nrIndexu}}</td>
                <td class="table__cell">{{firstName}}</td>
                <td class="table__cell">{{lastName}}</td>
                <td class="table__cell">{{email}}</td>
                <td class="table__cell">{{year}}</td>
                <td class="table__cell">{{course}}</td>
                <td class="table__cell">
                    <form class="table__form" action="/classDiary/delete/{{this.nrIndexu}}" method="POST">
                        <input class="table__button table__button--delete" type="submit" value="Delete">
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>

    
    </table>
</div>






    </body>
</html>
