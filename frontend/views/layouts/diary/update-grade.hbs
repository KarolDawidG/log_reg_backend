 <!doctype html>
<head>
    <link rel="stylesheet" href="/css/diary.css">
    <title>Add grades</title>
</head>

<body>
    <div class="forms-container">


    <div class="forms-container__create">
        <form class="forms-container__form" action="/update-grades" method="post">
        
            <select class="forms-container__select" name="student_last_name" id="student_last_name">
                {{#each AllastName}}
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
            <br>
            <select class="forms-container__select" name="course" id="course" required>
                <option value="">Grade</option>
                <option value="grade">3</option>
                <option value="grade">4</option>
                <option value="grade">5</option>
            </select>
            <br>
            <button class="forms-container__button forms-container__button--add" type="submit">Dodaj</button>
        </form>
    </div>

</div>

  
  
    <div class="table-container">
    <table class="table">
        <thead class="table__head">
            <tr class="table__row">
                <th class="table__heading">Lp</th>
                <th class="table__heading">Student ID</th>
                <th class="table__heading">Subject ID</th>
                <th class="table__heading">Last Name</th>
                <th class="table__heading">Description</th>
                <th class="table__heading">Grade</th>
                
            </tr>
        </thead>
        <tbody class="table__body">
            {{#each grades}}
            <tr class="table__row">
                <td class="table__cell">{{inc @index}}</td>
                <td class="table__cell">{{student_id}}</td>
                <td class="table__cell">{{subject_id}}</td>
                <td class="table__cell">{{student_last_name}}</td>
                <td class="table__cell">{{description}}</td>
                <td class="table__cell">{{grade}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>






    </body>
</html>
